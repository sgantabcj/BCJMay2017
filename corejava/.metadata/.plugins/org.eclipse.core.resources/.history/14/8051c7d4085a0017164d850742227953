package com.crmindz.bcjmay2017.datatypes.arrays;

import java.util.Arrays;

public class Exponent {
	public static void main(String[] args) {
		Exponent obj = new Exponent();
		double[] exponentsArray = obj.power(2,7);
		System.out.println(Arrays.toString(exponentsArray));
	}
	public double[] power (int base, int power){
		double[] exponentsArray = new double[power];
		for(int i=0;i<power;i++){
			exponentsArray[i]=Math.pow(base, i);
		}
		return exponentsArray;
	}
}
